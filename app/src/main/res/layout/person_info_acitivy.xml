<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/bindingView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/White"
        android:visibility="gone"
        android:orientation="vertical">
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/person_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/bindingView"
        android:background="@color/White">
        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/person_info_row2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/person_info_toolbar"
        android:background="@color/White">
        <ImageView
            android:id="@+id/head_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/head_photo_img"
            android:background="@drawable/head_photo"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击修改头像"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_below="@id/head_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/person_info_row2"
        android:layout_marginTop="10dp"
        android:background="@color/White">
        <LinearLayout
            android:id="@+id/person_info_row3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />

            <EditText
                android:id="@+id/nickname"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@null"
                style="?android:attr/textViewStyle"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/person_info_row4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/person_info_row3">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/boy_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/sex_img"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:id="@+id/girl_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/sex_img"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/person_info_row5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/person_info_row4">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="生日"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/birthday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请选择出生日期"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/person_info_row5">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="个人签名"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />

            <EditText
                android:id="@+id/motto"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="这个家伙很懒，神马都木有写"
                android:textSize="16sp"
                style="?android:attr/textViewStyle"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>